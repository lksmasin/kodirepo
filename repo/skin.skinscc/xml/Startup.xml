<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- <onload>ReplaceWindow($INFO[System.StartupWindow])</onload>< mod -->
	<onload>AlarmClock(Skin,ReplaceWindow($INFO[System.StartupWindow]),:$VAR[SkinSettingSkinDelayTime],silent)</onload>
	<controls>
		<control type="image">
				<depth>DepthBackground</depth>
				<include>FullScreenDimensions</include>
				<centertop>50%</centertop>
				<width>100%</width>
				<height>100%</height>
				<aspectratio>keep</aspectratio>
				<texture>special://skin/media/startup/nexus.jpg</texture>
				<animation effect="fade" center="auto" time="8000" start="0" end="100" loop="false" condition="true" >Conditional</animation>
			</control>
			<control type="image">
				<depth>DepthBackground</depth>
				<include>FullScreenDimensions</include>
				<centertop>50%</centertop>
				<width>100%</width>
				<height>100%</height>
				<aspectratio>keep</aspectratio>
				<texture>special://skin/media/startup/LOGO.png</texture>
			</control>
			<control type="image">
				<depth>DepthBackground</depth>
				<include>FullScreenDimensions</include>
				<centertop>50%</centertop>
				<width>100%</width>
				<height>100%</height>
				<aspectratio>keep</aspectratio>
				<texture>special://skin/media/startup/splash-2.png</texture>
				<animation effect="rotate" center="auto" time="3000" start="360" end="0" loop="true" condition="true" >Conditional</animation>
			</control>
	</controls>
</window>
